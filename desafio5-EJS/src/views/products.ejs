<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>

  <body>
    <h1>Lista de productos</h1>

    
    <% let path = 'http://localhost:8080/img/' %>

    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col"># ID</th>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
          </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %> 
                <tr>
                    <th scope="row" class="align-middle fs-3"><%= product.id %> </th>
                    <td class="align-middle fs-3"><%= product.title %></td>
                    <td class="align-middle fs-3"><%= product.price %></td>
                    <td><img src="<%= path+product.thumbnail %>" alt="" /></td>
                  </tr>
              <% }) %>
        </tbody>
      </table>
<hr>
<a href="http://localhost:8080/nuevoProducto" class="fs-3">Ingreso de producto nuevo</a>
<br>
<br>



  </body>
</html>
